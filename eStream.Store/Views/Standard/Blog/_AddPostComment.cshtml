@model Estream.Cart42.Web.Models.BlogPostCommentAddViewModel


<div class="row">
    <div class="col-lg-12 col-sm-12">
        <span class="title">Leave a Comment</span>
    </div>
    <div class="col-lg-12 col-sm-12 hero-feature">
        <form method="POST" action="@Url.Action("AddPostComment","Blog", new { id = (int?)null })">
            @if (!User.Identity.IsAuthenticated)
            {
                @Html.HiddenFor(model => model.IsAnonymous)                            
                <div class="form-group">
                    <label class="control-label col-md-2">@Html.T("Name")</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">@Html.T("Email")</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">@Html.T("Comment")</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="control-label col-md-2">@Html.T("Comment")</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
            @Html.HiddenFor(model => model.BlogPostId)
            <button type="submit" class="btn btn-primary">Add Comment</button>
        </form>
    </div>
</div>
