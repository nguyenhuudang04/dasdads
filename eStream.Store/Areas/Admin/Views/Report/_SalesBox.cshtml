@model Estream.Cart42.Web.Areas.Admin.Models.SalesBoxViewModel

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <span class="label label-success pull-right">@Html.TA("Monthly")</span>
        <h5>@Html.TA("Sales")</h5>
    </div>
    <div class="ibox-content">
        <h1 class="no-margins">@Model.Amount.ToCurrencyString()</h1>
        @if (Model.Difference.HasValue)
        {
            <div class="stat-percent font-bold text-success" title="@Html.TA("Percentage of last month sales")">@Model.Difference% <i class="fa fa-bolt"></i></div>
        }
        <small>@Html.TA("This month")</small>
    </div>
</div>