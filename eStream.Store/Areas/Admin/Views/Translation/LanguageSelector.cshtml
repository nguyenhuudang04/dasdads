@using System.Threading
@model Estream.Cart42.Web.Areas.Admin.Models.LanguageSelectorViewModel

<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <span class="fa fa-language"></span>
        <span class="badge badge-info">@Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName</span>
    </a>
    <ul class="dropdown-menu">
        @foreach (var language in Model.Languages)
        {
            <li>
                <a href="@Url.Action("SetActive", new { code = language.Code, backUrl = Request.RawUrl })" class="active">
                    <i class="fa fa-language"></i> @language.DisplayName
                </a>
            </li>
        }
    </ul>
</li>